<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>GOT Quote App</title>
  </head>

  <body>
    <h1>In Game of thrones either you win or Die</h1>

    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>

    
    <h2>Quotes</h2>

    <ul class = "quotes">
    <% for(var i=0; i<quotes.length; i++) { %>
    <li class = "quote">
      <span><%= quotes[i].name%></span>:
      <span><%= quotes[i].quote%></span>
    </li>
    <% } %>
    </ul>

    <div>
      <h2>Night King invades!</h2>
        <p>
         Replace John snow quote with Night King
        </p>
       <button id="update-button"> Night King attack Jon snow</button>
    </div>

     <div>
      <h2>Cut the Bran!</h2>
        <p>
         Delete one of Bran the Broken!. He is gone mad 
        </p>
        <button id="delete-button">Delete Bran the broken</button>
    </div>
         
    <div id="message"></div>     

    <script src="/main.js"></script>
  </body>
</html>